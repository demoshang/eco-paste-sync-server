{
  "compilerOptions": {
    "target": "ESNext",

    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "paths": {
      "@/env": ["src/utils/env.ts"],
      "@/error": ["src/utils/error.ts"]
    },
    "strict": true,
    "declaration": true,
    // "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    // "allowJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "exclude": ["dist"]
}
